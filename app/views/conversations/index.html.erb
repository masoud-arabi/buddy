<% @conversations.each do |conversation| %>
  <div class="container-conversation">

    <%= link_to  conversation_path(conversation) do %>

      <% chat_with_user = current_user == conversation.sender ? conversation.receiver : conversation.sender %>
      <% chat_with_contact = Contact.find_by(user: chat_with_user) %>

      <h1><%= chat_with_user.first_name %> <%= chat_with_user.last_name %></h1>
      <% if chat_with_user == conversation.receiver %>
       <h3><%= chat_with_contact.job_title %> @ <%= chat_with_contact.company.name %></h3>
      <% else %>
      <h3>Looking for a job</h3>
      <% end %>
    <% end %>
  </div>
<%  end %>

